//MIPI屏配置
&dsi {
	status = "okay";
	
	panel@0 {
		compatible = "simple-panel-dsi";
		reg = <0>;
		backlight = <&backlight>;
		reset-gpios = <&gpio3 31 GPIO_ACTIVE_LOW>; //待定
		enable-gpios = <&gpio2 4 GPIO_ACTIVE_HIGH>;//待定
		prepare-delay-ms = <10>;
		reset-delay-ms = <5>;
		init-delay-ms = <50>;
		enable-delay-ms = <50>;
		
		dsi,flags = <(MIPI_DSI_MODE_VIDEO | MIPI_DSI_MODE_VIDEO_BURST |
		              MIPI_DSI_MODE_LPM | MIPI_DSI_MODE_EOT_PACKET)>;
		//dsi数据格式
		dsi,format = <MIPI_DSI_FMT_RGB888>;
		// MIPI接口使用的lane数量，需要与硬件匹配
		dsi,lanes = <4>;
		
		//初始化序列，需找厂商要
		panel-init-sequence = [
		//待定
		];
		
		//退出序列，需找厂商要
		panel-exit-sequence =  [
			05 78 01 28
			05 00 01 10 //待定
		];
		
		//屏参数设置
		display-timings {
			native-mode = <&tft_lcd_timing>;
			
			tft_lcd_timing: timing0 {
				// 像素时钟频率（每个像素显示1s需要的时钟频率 fps为60）
				// (h_active + hfp + hbp + h_sync) * (v_active + vfp + vbp + v_sync) * fps
			clock-frequency = <67330000>;    //待定
			hactive = <800>;
			vactive = <1280>;
			hfront-porch = <18>;
			hsync-len = <18>;  //待定
			hback-porch = <18>;
			vfront-porch = <20>;
			vsync-len = <4>;   //待定
			vback-porch = <10>;
			hsync-active = <0>;
			vsync-active = <0>;
			de-active = <0>;
			pixelclk-active = <0>;
			};
		};				
	};
};

&backlight {
	status = "okay";
	pwms = <&pwm1 0 25000 0>; //待定
	enable-gpios = <&gpio1 4 GPIO_ACTIVE_HIGH>; //待定
};

&pwm1 {   //对应上面backlight里面的pwm1
	status = "okay";
};

&dsi_in_vopb {
	status = "disabled";
};

&dsi_in_vopl {
	status = "okay";
};

&route_dsi {
	status = "okay";
	connect = <&vopl_out_dsi>;
};



