/*
 *粗劣关于rk3399使用显示屏的设备树
 *10.1寸屏使用MIPI借口，双屏控制器vopb和vopl目前不确定使用哪个,因此后续代码需要对应修改
 *edp设置位于rk3399.dtsi第2099行
 *dsi设置位于rk3399.dtsi第2033行
 *display_subsystem位于rk3399-android.dtsi第315行
 *后续会移植到rk3399-sapphire-excavator-edp.dts然后进行相应的修改
 */


#include "rk3399.dtsi"
#include "rk3399-android.dtsi"
//edp屏
&edp {
	status = "okay";
	// Embedded Connection不需要HPD功能
	force-hpd;
	
	ports {
		// 输出Port1，连接panel的输入
		port@1 {
			reg = <1>;
			
			edp_out: endpoint {
				remote-endpoint = <&edp_panel>;
			};
		};
	};
};
&edp_in_vopb {
	status = "okay";
};
edp_in_vopl {
	status = "disabled";
};

&route_edp {
	status = "okay";
	logo,mode = "center";
	connect = <&vopb_out_edp>;
};

// edp面板
panel: edp-panel {
	status = "okay";
	compatible = "simple-panel";

	backlight = <&pwm_bl>;
	power-supply = <&vcc_lcd>;
	prepare-delay-ms = <20>;
	enable-delay-ms = <20>;
	
	// timings设置，可通过设备树中配置/驱动中配置/EDID三种方式实现
	dispaly-timings {
		native-mode = <&edp_timing>;
		
		// hsync start = hactive + hfront-porch
        // hsync end = hactive + hfront-porch + hsync-len
        // htotal = hactive + hfront-porch + hsync‐len + hback-porch
		edp_timing: timing0 {
			clock-frequency = <138500000>;
			hactive = <1920>;
			vactive = <1080>;
			hfront-porch = <64>;
			hsync-len = <48>;
			hback-porch = <48>;
			vfront-porch = <3>;
			vsync-len = <6>;
			vback-porch = <3>;
			hsync-active = <0>;
			vsync-active = <0>;
			de-active = <0>;
			pixelclk-active = <0>;
		};
	};

	ports {
		edp_panel: endpoint {
			remote-endpoint = <&edp_out>;
			};
	};
};

// pwm背光配置
// 使用命令行设置背光亮度:
// echo xxx > sys/class/backlight/backlight/brightness

pwm_bl: backlight {
	status = "okay";
	compatible = "pwm_backlight";
	// pwm0表示选择pwm0；0表示index，一般为0；25000表示PWM输出波形的时间
    // 周期，单位为ns；0表示极性
	pwms = <&pwm2 0 25000 0>;
	// 0~255表示0%~100%
	brightness-levels = <
		0 1 2 3 4 5 6 7
