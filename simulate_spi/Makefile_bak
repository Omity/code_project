CC_PATH = /home/sj03955/stationMax/rk3399-android7.1-sdk/prebuilts/gcc/linux-x86/aarch64/gcc-linaro-6.3.1-2017.05-x86_64_aarch64-linux-gnu/bin
CC      = ${CC_PATH}/aarch64-linux-gnu-gcc
STRIP   = ${CC_PATH}/aarch64-linux-gnu-strip

CFLAG   =  -std=c99 -D_FILE_OFFSET_BITS=64 -D_GNU_SOURCE -D_LARGE_FILE_SOURCE
LDFLAG  =  -lrt  -static   -D_FILE_OFFSET_BITS=64 -D_GNU_SOURCE -D_LARGE_FILE_SOURCE


all:
	$(CC) -g -Wall $(CFALG) $(LDFLAG) spi_test.c -o spi_test
	$(STRIP) spi_test
clean:
	rm spi_test
